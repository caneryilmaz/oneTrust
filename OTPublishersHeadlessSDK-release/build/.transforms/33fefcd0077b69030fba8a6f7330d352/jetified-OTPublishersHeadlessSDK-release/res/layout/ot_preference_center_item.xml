<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ot_pc_group_items_left_margin"
        android:layout_marginLeft="@dimen/ot_pc_group_items_left_margin"
        android:layout_marginTop="@dimen/ot_pc_divider_margin"
        android:layout_marginBottom="@dimen/ot_pc_divider_margin">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ot_margin_medium"
            android:layout_marginRight="@dimen/ot_margin_medium"
            android:layout_toLeftOf="@+id/alwaysActiveText"
            android:maxLines="5"
            android:textSize="@dimen/ot_description_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ot_pc_arrow_margin"
            android:layout_marginRight="@dimen/ot_pc_arrow_margin"
            android:src="@drawable/ot_forward_arrow" />

        <TextView
            android:id="@+id/alwaysActiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ot_pc_always_active_margin"
            android:layout_marginRight="@dimen/ot_pc_always_active_margin"
            android:maxWidth="150dp"
            android:textSize="@dimen/ot_description_text_size"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/consent_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ot_pc_switch_margin"
            android:layout_marginRight="@dimen/ot_pc_switch_margin" />
    </FrameLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_below="@+id/items"
        android:background="@color/trans_light_greyOT" />
</RelativeLayout>