<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sdk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/ot_margin_text"
        android:layout_marginLeft="@dimen/ot_margin_text"
        android:layout_marginTop="@dimen/ot_margin_small"
        android:maxLines="3"
        android:paddingTop="@dimen/ot_sdk_list_name_padding"
        android:paddingEnd="@dimen/ot_vl_vendor_name_padding"
        android:paddingRight="@dimen/ot_vl_vendor_name_padding"
        android:textSize="@dimen/ot_description_text_size"
        android:textStyle="bold"
        app:layout_constrainedWidth="true" />

    <TextView
        android:id="@+id/sdk_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdk_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingStart="@dimen/ot_margin_text"
        android:paddingLeft="@dimen/ot_margin_text"
        android:paddingEnd="@dimen/ot_margin_text"
        android:paddingRight="@dimen/ot_margin_text"
        android:paddingTop="@dimen/ot_sdklist_desc_padding"
        android:paddingBottom="@dimen/ot_sdklist_desc_padding"
        android:textSize="@dimen/ot_description_text_size" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/legit_int_switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/ot_vl_li_margin"
        android:layout_marginRight="@dimen/ot_vl_li_margin"
        android:visibility="invisible" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/ot_margin_text"
        android:layout_marginTop="@dimen/ot_margin_text"
        android:layout_marginRight="@dimen/ot_margin_text"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/alwaysActiveTextChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/ot_vl_toggle_padding_large"
        android:paddingEnd="@dimen/ot_link_padding"
        android:paddingRight="@dimen/ot_link_padding"
        android:paddingBottom="@dimen/ot_vl_toggle_padding_large"
        android:text="Always Active"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/ot_description_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/ot_margin_small"
        android:layout_marginRight="@dimen/ot_margin_small"
        android:src="@drawable/ot_forward_arrow"
        android:visibility="gone" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_below="@+id/sdk_description"
        android:layout_marginStart="@dimen/ot_fab_margin"
        android:layout_marginLeft="@dimen/ot_fab_margin"
        android:layout_marginTop="@dimen/ot_margin_very_small"
        android:layout_marginEnd="@dimen/ot_margin_small"
        android:layout_marginRight="@dimen/ot_margin_small"
        android:background="@color/trans_light_greyOT" />

</RelativeLayout>