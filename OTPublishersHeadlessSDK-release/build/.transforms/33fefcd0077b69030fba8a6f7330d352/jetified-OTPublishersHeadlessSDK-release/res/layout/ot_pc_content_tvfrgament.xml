<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_pc_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_pc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ot_tv_layout_margin_small"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ot_tv_text_margin_very_small"
        android:layout_marginLeft="@dimen/ot_tv_margin_primary"
        android:layout_marginRight="@dimen/ot_tv_margin_primary"
        android:gravity="center_horizontal"
        android:textSize="@dimen/ot_tv_title_text_size_large"
        android:textStyle="bold"
        android:textColor="@color/whiteOT"
        />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/tv_main_scrollable_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/tv_pc_title"
        android:layout_above="@id/tv_btn_confirm"
        android:background="@android:color/transparent"
        tools:ignore="MissingDefaultResource">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/ot_tv_layout_padding"
            android:background="@android:color/transparent"
            >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ot_tv_scrollable_text_height"
                android:layout_below="@id/tv_pc_title"
                android:id="@+id/tv_pc_desc_scrollview"
                android:scrollbarThumbVertical="@drawable/ot_tv_scrollbar"
                android:scrollbarTrackVertical="@color/darkGreyOT"
                android:scrollbarSize="@dimen/ot_tv_scrollbar_size"
                android:layout_marginLeft="@dimen/ot_tv_margin_secondary"
                android:layout_marginRight="@dimen/ot_tv_margin_secondary"
                android:layout_marginStart="@dimen/ot_tv_margin_secondary"
                android:layout_marginEnd="@dimen/ot_tv_margin_secondary"
                android:fillViewport="true">
                <TextView
                    android:id="@+id/tv_pc_desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ot_tv_scrollable_text_height"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/ot_tv_text_margin_very_small"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:minLines="4"
                    android:paddingEnd="@dimen/ot_tv_description_margin_small"
                    android:paddingStart="@dimen/ot_tv_description_margin_small"
                    android:lineSpacingExtra="@dimen/ot_tv_text_line_spacing"
                    android:textSize="@dimen/ot_description_text_size"/>
            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_list_title"
                android:layout_marginTop="@dimen/ot_tv_layout_margin_small"
                android:maxLines="3"
                android:textStyle="bold"
                android:layout_below="@id/tv_pc_desc_scrollview"
                android:layout_marginLeft="@dimen/ot_tv_margin_primary"
                android:layout_marginRight="@dimen/ot_tv_margin_primary"
                android:layout_marginStart="@dimen/ot_tv_margin_primary"
                android:layout_marginEnd="@dimen/ot_tv_margin_primary"
                android:layout_gravity="start"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_tv_text_margin_very_small"
                android:layout_marginBottom="@dimen/ot_tv_text_margin_very_small"
                android:background="@android:color/transparent"
                android:id="@+id/tv_grp_list"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/tv_btn_confirm"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/ot_tv_layout_margin_small"
        android:layout_marginLeft="@dimen/ot_tv_margin_button"
        android:layout_marginRight="@dimen/ot_tv_margin_button"
        android:layout_marginStart="@dimen/ot_tv_margin_button"
        android:layout_marginEnd="@dimen/ot_tv_margin_button"
        android:layout_marginBottom="@dimen/ot_tv_layout_margin_bottom"
        android:stateListAnimator="@animator/ot_focus_in_tt"
        android:layout_height="wrap_content" />
</RelativeLayout>