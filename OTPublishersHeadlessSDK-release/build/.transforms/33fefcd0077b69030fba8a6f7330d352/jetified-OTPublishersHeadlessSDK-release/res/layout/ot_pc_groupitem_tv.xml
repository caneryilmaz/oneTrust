<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ot_tv_margin_primary"
    android:layout_marginRight="@dimen/ot_tv_margin_primary_large"
    android:layout_marginTop="@dimen/ot_tv_layout_margin_small"
    android:layout_marginBottom="@dimen/ot_tv_text_margin_very_small"
    android:id="@+id/pc_card_list"
    android:stateListAnimator="@animator/ot_focus_in"
    android:focusableInTouchMode="true">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_grp_layout"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/tv_grp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:textSize="@dimen/ot_description_text_size"/>

    <TextView
        android:id="@+id/group_status_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:visibility="visible"
        android:layout_weight="3.5"
        android:textColor="@color/whiteOT" />
    <TextView
        android:id="@+id/always_active_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:visibility="gone"
        android:maxLines="10"
        android:text=""
        android:layout_weight="3.5"
        android:textColor="@color/whiteOT" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_show_more"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@drawable/ot_forward_tvarrow"/>

</LinearLayout>
</androidx.cardview.widget.CardView>