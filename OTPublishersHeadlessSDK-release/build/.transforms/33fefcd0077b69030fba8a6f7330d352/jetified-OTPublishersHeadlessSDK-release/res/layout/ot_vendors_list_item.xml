<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vl_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/ot_fab_margin"
            android:layout_marginLeft="@dimen/ot_fab_margin"
            android:maxLines="3"
            android:paddingEnd="@dimen/ot_vl_vendor_name_padding"
            android:paddingRight="@dimen/ot_vl_vendor_name_padding"
            android:layout_marginTop="@dimen/ot_margin_small"
            android:layout_marginBottom="@dimen/ot_margin_small"
            android:textSize="@dimen/ot_description_text_size"
            />

        <TextView
            android:id="@+id/vendors_privacy_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/ot_fab_margin"
            android:layout_marginLeft="@dimen/ot_fab_margin"
            android:layout_marginTop="@dimen/ot_margin_small"
            android:layout_marginBottom="@dimen/ot_margin_very_small"
            android:textSize="@dimen/ot_links_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ot_margin_small"
            android:layout_marginRight="@dimen/ot_margin_small"
            android:src="@drawable/ot_forward_arrow" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/legit_int_switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ot_vl_li_margin"
            android:layout_marginRight="@dimen/ot_vl_li_margin" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ot_vl_toggle_margin"
            android:layout_marginRight="@dimen/ot_vl_toggle_margin" />
    </FrameLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_below="@+id/vl_items"
        android:layout_marginTop="@dimen/ot_margin_very_small"
        android:background="@color/trans_light_greyOT" />

</RelativeLayout>